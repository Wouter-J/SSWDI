@model IEnumerable<AS_Core.DomainModel.Stay>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animal.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal.AnimalType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal.Gender)
