@model AS_Core.DomainModel.Animal

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label"></label>
                <input asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedAge" class="control-label"></label>
                <input asp-for="EstimatedAge" class="form-control" />
                <span asp-validation-for="EstimatedAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race" class="control-label"></label>
                <input asp-for="Race" class="form-control" />
                <span asp-validation-for="Race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfDeath" class="control-label"></label>
                <input asp-for="DateOfDeath" class="form-control" />
                <span asp-validation-for="DateOfDeath" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Castrated" /> @Html.DisplayNameFor(model => model.Castrated)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ChildFriendly" class="control-label"></label>
                <select asp-for="ChildFriendly" asp-items="Html.GetEnumSelectList<AS_Core.Enums.ChildFriendly>()" class="form-control">
                </select>
                <span asp-validation-for="ChildFriendly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReasonGivenAway" class="control-label"></label>
                <input asp-for="ReasonGivenAway" class="form-control" />
                <span asp-validation-for="ReasonGivenAway" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    //Only Birthday or Estimated age should be added; Service additionally checks this.
        var birthday = document.getElementById("Birthdate");
    var estimate = document.getElementById("EstimatedAge");

    if (birthday.value != "") {
        estimate.disabled = this.value != "";
    }
    if (estimate.value != 0) {
        birthday.disabled = this.value != "";
    }

    birthday.oninput = function () {
            estimate.disabled = this.value != "";
    }
    estimate.oninput = function () {
            birthday.disabled = this.value != "";
    }
</script>
}
